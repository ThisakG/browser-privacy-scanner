{
  "manifest_version": 3,
  "name": "TinyGuard",
  "description": "Scans websites for tracking requests and privacy risks to provide a privacy score.",
  "version": "2.1",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "tracker_blocklist",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TinyGuard: Privacy Scanner"
  },
  "icons": {
    "128": "icons/TinyGuard128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}